<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Marla_5_Details">
    <GridLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content">
        <com.ortiz.touchview.TouchImageView
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:src="@drawable/home43"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="5 Marla Plots in DHA"
            android:textSize="25dp"
            android:layout_marginLeft="95dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="5 Marla plots are available in sector “P, T, and V“. Sector P and T are located at ring road and sector V at main boulevard near Matital gate. Upcoming possession sector V. Plot dimension 25’x45′."
            android:textSize="18dp"
            android:layout_marginLeft="95dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"/>
        <com.ortiz.touchview.TouchImageView
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:src="@drawable/city6"/>
        <com.ortiz.touchview.TouchImageView
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:src="@drawable/city7"/>
        <com.ortiz.touchview.TouchImageView
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:src="@drawable/city8"/>
    </GridLayout>
</ScrollView>
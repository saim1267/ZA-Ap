<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OurServices">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Property Valuation"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/RealEstate"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="0"
                app:srcCompat="@drawable/home30" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:text="Architecture"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/Architecture"
                android:layout_width="157dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/home31" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Property Management"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/PropertyManagement"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="0"
                app:srcCompat="@drawable/home32" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginLeft="60dp"
                android:text="Residential Construction"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/ResidentialConstruction"
                android:layout_width="157dp"
                android:layout_height="60dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/home34"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_row="5"
                android:layout_column="0"
                android:text="Commercial Construction"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/CommercialConstruction"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:layout_row="4"
                android:layout_column="0"
                app:srcCompat="@drawable/home35"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_marginLeft="60dp"
                android:text="Industrial Construction"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/IndustrialConstruction"
                android:layout_width="157dp"
                android:layout_height="50dp"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/home36"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>
        </GridLayout>
    </LinearLayout>
</ScrollView>